<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="170dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_piano_border"
        android:minHeight="110dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/symphonyImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/music_placeholder" />

            <TextView
                android:id="@+id/symphonyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Symphony name"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/composerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Composer"
                android:textColor="#CCCCCC"
                android:textFontWeight="400"
                android:textSize="13sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
